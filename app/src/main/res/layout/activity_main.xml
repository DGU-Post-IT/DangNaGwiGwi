<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky_blue"
        android:orientation="vertical"
        tools:context=".presentation.main.MainActivity"
        android:backgroundTint="#F2F3F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            >

            <Button
                android:id="@+id/my_page_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="MY"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:src="@drawable/logo_inapp"
                />

            <Button
                android:id="@+id/btn_question_activity"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="임시(Q)"
                android:textColor="#F2F3F4"
                android:layout_weight="1"
                />
        </LinearLayout>

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#4D4D4D"
            />

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_check"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:text="이번주 나의 기분은?"
                        android:paddingBottom="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/proportion_view"
                    android:layout_marginTop="0dp"
                    android:layout_marginHorizontal="18dp"
                    android:elevation="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/happy_pink"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="기쁨"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/sad_mint"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="슬픔"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/angry_yellow"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="화남"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/anxiety_blue"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="불안"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/wound_green"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="상처"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/embarrass_gray"
                            android:src="@drawable/ic_circle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="4dp"
                            android:text="당황"
                            android:textStyle="bold"
                            android:fontFamily="@font/dx_font"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:id="@+id/question_info_card_view"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="20dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/ic_emotion_check_yes"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_emotion_check_yes" />

                <ImageView
                    android:id="@+id/ic_emotion_check_no"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_emotion_check_no" />

                <TextView
                    android:id="@+id/today_record_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="23sp"
                    android:text = "아직 오늘의 기록이 없어요."
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>






        <LinearLayout
            android:id="@+id/layout_weeklycheck"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFC000"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_parent_memory"
                android:layout_weight="1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기록보기"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textSize="30dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_kkeokse"
                android:padding="20dp"
                android:layout_weight="0.5"/>


        </LinearLayout>

