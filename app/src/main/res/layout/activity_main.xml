<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky_blue"
        android:orientation="vertical"
        tools:context=".presentation.main.MainActivity"
        android:backgroundTint="#F2F3F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            >

            <Button
                android:id="@+id/my_page_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="MY"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:src="@drawable/logo_inapp"
                />

            <Button
                android:id="@+id/btn_question_activity"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="임시(Q)"
                android:textColor="#F2F3F4"
                android:layout_weight="1"
                />
        </LinearLayout>

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#4D4D4D"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_check"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="이번주 나의 기분은?"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="14dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <com.example.postit.ProportionBarView
                    android:id="@+id/proportion_view"
                    android:layout_marginTop="0dp"
                    android:layout_marginHorizontal="18dp"
                    android:elevation="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/happy_pink"
                        android:src="@drawable/ic_circle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="4dp"
                        android:text="기쁨"
                        android:textStyle="bold"
                        android:fontFamily="@font/dx_font"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/soso_blue"
                        android:src="@drawable/ic_circle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="4dp"
                        android:text="무기력함"
                        android:textStyle="bold"
                        android:fontFamily="@font/dx_font"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/angry_yellow"
                        android:src="@drawable/ic_circle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="4dp"
                        android:text="화남"
                        android:textStyle="bold"
                        android:fontFamily="@font/dx_font"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/sad_mint"
                        android:src="@drawable/ic_circle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="4dp"
                        android:text="슬픔"
                        android:textStyle="bold"
                        android:fontFamily="@font/dx_font"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/layout_weeklycheck"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFC000"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.3"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_calendar"
                android:layout_weight="1"
                android:padding="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기록보기"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textSize="30dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_kkeokse"
                android:padding="20dp"
                android:layout_weight="0.5"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_nagging"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#8FD9B6"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.3"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_nagging"
                android:layout_weight="1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="잔소리하기"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textSize="30dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_kkeokse"
                android:padding="20dp"
                android:layout_weight="0.5"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#B3DE7B"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.3"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_game"
                android:layout_weight="1"
                android:padding="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="게임하기"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textSize="30dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mom_kkeokse"
                android:padding="20dp"
                android:layout_weight="0.5"/>


        </LinearLayout>


    </LinearLayout>
</layout>