<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.postit.ProfileViewModel" />
    </data>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 ID 코드"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:hint="로그인 되어 있지 않음"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:text="@{vm.emailText}" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@{vm.buttonText}"
        />

    <LinearLayout
        android:id="@+id/private_info_layout"
        android:orientation="vertical"
        android:visibility="@{!vm.privateInfoSaved &amp;&amp; vm.loggedIn ? View.VISIBLE : View.GONE, default=gone}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="1dp"
        android:hint="이름을 입력" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sex_select_group"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성"
            android:tag="m"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성"
            android:tag="f"
            />

    </RadioGroup>

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/age_edit_text"
        android:inputType="number"
        android:hint="나이를 입력"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 저장하기"
        android:id="@+id/info_save_button"
        />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자녀 관계 보기"
        android:id="@+id/children_relation_button"
        />



</LinearLayout>
</layout>